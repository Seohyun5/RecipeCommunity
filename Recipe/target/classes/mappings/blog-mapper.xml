<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="blogDAO">
	
	<insert id="insertBlog" parameterType="blog">
		INSERT INTO BLOG (SUBJECT, WRITTEN, CONTENT, FILENAME)
		VALUES (#{subject}, #{written}, #{content}, #{filename})
	</insert>
	
	<update id="updateBlog" parameterType="blog">
		UPDATE BLOG
		SET SUBJECT = #{subject}, WRITTEN = #{written}, CONTENT = #{content}, FILENAME = #{filename}
		WHERE BLOGNO = #{blogno}
	</update>
	
	<delete id="deleteBlog" parameterType="int">
		DELETE * FROM BLOG WHERE BLOGNO = #{blogno}
	</delete>
	
	<select id="getBlogList" resultType="blog">
		SELECT * FROM BLOG
	</select>
	
	<select id="getMyblogList" parameterType="String" resultType="blog">
		SELECT * FROM BLOG WHERE ID = #{id}
	</select>
	
	<select id="getBlog" parameterType="int" resultType="blog">
		SELECT * FROM BLOG WHERE BLOGNO = #{blogno}
	</select>
	
</mapper>
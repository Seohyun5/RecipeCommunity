<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mylikeDAO">
	
	<insert id="insertMylike" parameterType="mylike">
		INSERT INTO MYLIKE (ID, RECIPENO)
		VALUES (#{id}, #{recipeno})
	</insert>
	
	<delete id="deleteMylike" parameterType="mylike">
		DELETE * FROM MYLIKE WHERE ID = #{id} AND RECIPENO = #{recipeno}
	</delete>
	
	<select id="getMylikeList" parameterType="String" resultType="recipe">
		SELECT * FROM RECIPE
		WHERE RECIPENO = (SELECT RECIPENO FROM MYLIKE WHERE ID = #{id}) 
	</select>
	
</mapper>